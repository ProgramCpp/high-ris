<?xml version='1.0' encoding='utf-8'?>
<widget id="com.highris.employee" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MyWork</name>
    <description>
        Application for employees to record feedback.
    </description>
    <author email="janani.anbarasan@gmail.com" href="http://programcpp.github.io">
        Janani Anbarasan
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-firebase" spec="0.1.24" />
    <!--plugin name="cordova-plugin-whitelist" spec="1" /-->
    <!--access origin="*://192.168.1.176:3004" subdomains="true"/-->
    <!--access origin="*://www.google.com" subdomains="true"/-->
    <access origin="*://192.168.1.176:3004" />
    <allow-navigation href="*" />
    <allow-navigation href="http://192.168.1.176:3004/*" />
    <allow-navigation href="https://192.168.1.176:3004/*" />
    <allow-navigation href="tel:*" />
    <allow-navigation href="sms:*" />
    <allow-navigation href="mailto:*" />
    <allow-navigation href="geo:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="Orientation" value="portrait" />
        <!--allow-navigation href="https://192.168.1.176:3004/login" /-->
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
